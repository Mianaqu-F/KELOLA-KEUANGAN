# =============================================================================
# FinanSphere - Finance Management Application
# Professional Laravel Environment Configuration Template
# =============================================================================

# Application Information
APP_NAME="Manage Finance Pro"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A simple finance management application"
APP_AUTHOR="FinanSphere Team & Founder Creative Trees"

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Application Environment
# Options: local, development, staging, production
APP_ENV=local

# Application Key (Generate with: php artisan key:generate)
APP_KEY=

# Debug Mode
# Set to false in production for security
APP_DEBUG=true

# Application URL
# Change to your production domain (e.g., https://yourdomain.com)
APP_URL=http://127.0.0.1:8000

# =============================================================================
# LOCALIZATION
# =============================================================================

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =============================================================================
# MAINTENANCE MODE
# =============================================================================

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# =============================================================================
# PHP CLI SERVER
# =============================================================================

PHP_CLI_SERVER_WORKERS=4

# =============================================================================
# SECURITY
# =============================================================================

BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# Options: emergency, alert, critical, error, warning, notice, info, debug
LOG_LEVEL=error

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Connection
# Options: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=mysql

DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=db_finbrain
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session Driver
# Options: file, cookie, database, redis, memcached
SESSION_DRIVER=redis

SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# BROADCASTING
# =============================================================================

BROADCAST_CONNECTION=log

# =============================================================================
# FILESYSTEM
# =============================================================================

FILESYSTEM_DISK=local

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Queue Connection
# Options: sync, database, redis, sqs, beanstalkd, etc.
QUEUE_CONNECTION=sync

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Store
# Options: file, database, redis, memcached, dynamodb
CACHE_STORE=redis

# CACHE_PREFIX=

# =============================================================================
# MEMCACHED CONFIGURATION (if using memcached)
# =============================================================================

MEMCACHED_HOST=null

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Client
# Options: phpredis, predis
REDIS_CLIENT=phpredis

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================

# Mail Mailer
# Options: smtp, sendmail, mailgun, ses, postmark, log
MAIL_MAILER=log

MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS CONFIGURATION (for S3, SES, etc.)
# =============================================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# VITE CONFIGURATION
# =============================================================================

VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================
# Add your custom environment variables here for application-specific settings
